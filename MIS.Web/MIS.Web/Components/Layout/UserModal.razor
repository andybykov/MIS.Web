@inject UserManager userManager

<div class="card">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="fas fa-user-circle me-2"></i>User Profile
        </h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-2">
                    <strong class="text-muted">User ID:</strong>
                    <span class="badge bg-primary ms-2">@user?.Id</span>
                </div>
                <div class="mb-2">
                    <strong class="text-muted">Role:</strong>
                    <span class="badge bg-info ms-2">@user?.Role</span>
                </div>
                <div class="mb-2">
                    <strong class="text-muted">Gender:</strong>
                    <span class="ms-2">
                        <i class="fas @(user?.Gender == Gender.Male ? "fa-mars text-primary" : "fa-venus text-danger") me-1"></i>
                        @user?.Gender
                    </span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-2">
                    <strong class="text-muted">Registration:</strong>
                    <span class="ms-2">@user?.RegistrationDate.ToString("dd.MM.yyyy")</span>
                </div>
                <div class="mb-2">
                    <strong class="text-muted">Date of Birth:</strong>
                    <span class="ms-2">@user?.DateOfBirth.ToString("dd.MM.yyyy")</span>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <strong class="text-muted">Full Name:</strong>
            <div class="mt-1">
                <i class="fas fa-user me-2 text-muted"></i>
                <span class="fs-5">@user?.FullName</span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-2">
                    <strong class="text-muted">Email:</strong>
                    <div class="mt-1">
                        <i class="fas fa-envelope me-2 text-muted"></i>
                        @user?.Email
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-2">
                    <strong class="text-muted">Phone:</strong>
                    <div class="mt-1">
                        <i class="fas fa-phone me-2 text-muted"></i>
                        @user?.PhoneNumber
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3 p-2 bg-light rounded">
            <strong class="text-muted">Password:</strong>
            <span class="ms-2">
                <i class="fas fa-lock me-1 text-muted"></i>
                ••••••••
                <small class="text-muted ms-2">Encrypted</small>
            </span>
        </div>
    </div>
</div>
<button type="button" class="btn btn-primary btn"  @onclick="OnClickCallback">
    Trigger a Parent component method
</button>

@code {
    private UserOutputModel? user;

    [Parameter] public int UserId { get; set; }

    [Parameter] public EventCallback<MouseEventArgs> OnClickCallback { get; set; } 

    protected override void OnInitialized()
    {
        // get employee with {serId} from DB

        user = userManager.GetById(UserId);

        base.OnInitialized();
    }
}